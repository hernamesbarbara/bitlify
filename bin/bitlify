#!/usr/bin/env python3
# -*- coding: utf-8 -*-
"""bitlify

Usage:
  bitlify <url> [--title=<title>] [--backhalf=<backhalf>] [--outfile=<outfile>]
  bitlify --csv=<csv_file> [--outfile=<outfile>]
  bitlify -h | --help

Options:
  -h --help              Show this screen.
  --title=<title>        Title associated with the URL [default: ].
  --backhalf=<backhalf>  Desired custom back-half for the short URL [default: ].
  --csv=<csv_file>       CSV file containing URLs to be shortened.
  --outfile=<outfile>    Output file name [default: output.csv].

"""

import os
import pandas as pd
from docopt import docopt
import bitlyutils as utils

# Reading Bitly access token from the file
with open(os.path.expanduser('~/.bitly'), 'r') as f:
    ACCESS_TOKEN = f.read().strip()

__version__ = '0.1.0'
__author__ = "austin"
__license__ = "MIT"

def main(args):
    if args.get('--csv'):
        df = pd.read_csv(args['--csv'])
        df.columns = [col.lower() for col in df.columns]

        results = utils.process_url_list(df.to_dict(orient='records'), ACCESS_TOKEN)
            
        df_out = pd.DataFrame(results)
        if args.get('--outfile'):
            outfile = args['--outfile']
        else:
            outfile = 'output.csv'
        df_out.to_csv(outfile, index=False, encoding='utf-8')
        print(f"saved {len(df_out)} results to {outfile}")
    else:
        url = args['<url>']
        title = args.get('--title')
        backhalf = args.get('--backhalf')
        result = utils.process_single_url(url, ACCESS_TOKEN, title, backhalf)
        print(f"{url} => {result['short_url']}")

if __name__ == "__main__":
    arguments = docopt(__doc__)
    main(arguments)